<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Quantity</th>
      <th>Weight</th>
      <th>Otherchanges</th>
      <th>Size</th>
      <th>Type</th>
      <th>Gender</th>
      <th>Purity</th>
      <th>Color</th>
      <th>Image</th>
      <th>Occasion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.code %></td>
        <td><%= product.quantity %></td>
        <td><%= product.weight %></td>
        <td><%= product.otherchanges %></td>
        <td><%= product.size %></td>
        <td><%= product.type %></td>
        <td><%= product.gender %></td>
        <td><%= product.purity %></td>
        <td><%= product.color %></td>
        <td><%= image_tag product.image.thumb.url %></td>
        <td><%= product.occasion_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

