<div class="container">
  <%= form_for(product,:html => {:multipart => true}) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name ,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_field :code ,class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>

  <div class="fform-group">
    <%= f.label :weight %>
    <%= f.text_field :weight, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :otherchanges %>
    <%= f.text_field :otherchanges ,class: "form-control "%>
  </div>

  <div class="form-group">
    <%= f.label :size %>
    <%= f.number_field :size,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :type %>
    <%= f.text_field :type,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :gender %>
    <%= f.text_field :gender,class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :purity %>
    <%= f.text_field :purity ,class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :color %>
    <%= f.text_field :color,class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image ,class: "form-control" %>
    <% if f.object.image? %>
      <%= image_tag f.object.image.thumb.url ,class: "form-control" %>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image %> 
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :occasion_id %>
    <%= f.text_field :occasion_id ,class: "form-control"%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

  
</div>

